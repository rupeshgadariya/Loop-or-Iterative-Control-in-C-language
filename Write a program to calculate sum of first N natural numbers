// Write a program to calculate sum of first N natural numbers 

#include<stdio.h>
#include<conio.h>

    void main()
{
         int x,i=1,sum=0;
        printf("Enter a number ");
        scanf("%d",&x);
        while (i<=x)
        {
           sum = sum + i;     
            i++;
        }
            printf("Sum of first %d natural numbers = %lu",x,sum);
        
    getch();
}
